# =====================================
# üêç Use official lightweight Python image
# =====================================
FROM python:3.10-slim-buster

# Avoid Python writing .pyc files & buffering logs
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# =====================================
# üìÇ Set working directory
# =====================================
WORKDIR /app

# =====================================
# üì¶ Copy and install dependencies first (for caching)
# =====================================
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# =====================================
# üìÅ Copy the rest of the application
# =====================================
COPY . .

# =====================================
# üîì Expose Flask port
# =====================================
EXPOSE 8080

# =====================================
# ‚ñ∂Ô∏è Run the Flask application
# =====================================
CMD ["python", "app.py"]
